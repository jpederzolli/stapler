<project default="dist"
	xmlns:a="jelly:ant">
	
	<goal name="src-zip">
		<a:zip destfile="target/stapler-${pom.currentVersion}-src.zip">
			<a:fileset dir="src" />
		</a:zip>
	</goal>
	
	<goal name="dist:build">
		<attainGoal name="javadoc" />
		<attainGoal name="jar" />
		<a:ant dir="example" target="war" />
		
		<a:zip destfile="target/stapler-${pom.currentVersion}.zip">
			<a:fileset dir="target" includes="*.jar" />
			<a:zipfileset dir="target/docs/apidocs" prefix="javadoc" />
			<a:fileset dir="." includes="LICENSE.txt"/>
			<a:fileset dir="../www" excludes="**/CVS"/>
			<a:fileset dir="example/build" includes="*.war"/>
			<a:fileset dir="." includes="example/**/*" excludes="**/CVS, example/build/**/*"/>
		</a:zip>
	</goal>
</project>